{%- comment -%}
  This is a required section for the Shopify Theme Store.
  It is available in the "Header" section in the theme editor.

  Theme Store required settings
  - Show announcement
  - Text: message to announce
  - Link: link of the announcement bar

  Theme Store optional settings
  - Home page only: only shows on the home page
{%- endcomment -%}
<section data-section-id="{{ section.id }}" data-section-type="header">
  {%- if section.settings.announcement_bar_enabled -%}
    <div class="announcement-bar">
      {%- if section.settings.announcement_bar_home_page_only == false or template.name == 'index' -%}
        {%- if section.settings.announcement_bar_link != blank -%}
          <a href="{{ section.settings.announcement_bar_link }}">
            {{ section.settings.announcement_bar_text | escape }}
          </a>
        {%- else -%}
          <p>{{ section.settings.announcement_bar_text | escape }}</p>
        {%- endif -%}
      {%- endif -%}
    </div>
  {%- endif -%}

  <header role="banner">
    <div class="header-inner">
      {% if template.name == 'index' %}
        <h1>
      {% else %}
        <div class="h1">
      {% endif %}
          <a href="/" class="logo-image">
            {% if section.settings.logo != blank %}
              {% capture image_size %}{{ section.settings.logo_max_width }}x{% endcapture %}
              <img src="{{ section.settings.logo | img_url: image_size }}"
                  srcset="{{ section.settings.logo | img_url: image_size }} 1x, {{ section.settings.logo | img_url: image_size, scale: 2 }} 2x"
                  alt="{{ section.settings.logo.alt | default: shop.name }}">
            {% else %}
              {{ shop.name }}
            {% endif %}
          </a>
      {% if template.name == 'index' %}
        </h1>
      {% else %}
        </div>
      {% endif %}

      <div class="cart-account">
        <a href="/cart" class="cart-link">
          üõí Cart ({{ cart.item_count }} {{ 'layout.cart.items_count' | t: count: cart.item_count }})
        </a>

        {% if shop.customer_accounts_enabled %}
          <ul class="account-links">
            {% if customer %}
              <li>
                <a href="/account">{{ customer.first_name | default: 'Account' }}</a>
              </li>
              <li>
                <a href="/account/logout">Log out</a>
              </li>
            {% else %}
              <li>
                <a href="/account/login">Log in</a>
              </li>
              <li>
                <a href="/account/register">Create account</a>
              </li>
            {% endif %}
          </ul>
        {% endif %}
      </div>

      <form action="/search" method="get" role="search" class="search-form">
        <label for="Search-{{ section.id }}" class="label-hidden">
          Search
        </label>
        <input type="search"
          name="q"
          id="Search-{{ section.id }}"
          value="{{ search.terms | escape }}"
          placeholder="Search...">
        <button type="submit" class="button">üîç</button>
      </form>
    </div>
  </header>

  <nav role="navigation" class="desktop-nav">
    <ul>
      {% for link in linklists[section.settings.menu].links %}
        {% if link.links != blank %}
          <li>
            <a href="{{ link.url }}">
              {{ link.title }}
              ‚ñº
            </a>
            <ul>
              {% for childlink in link.links %}
                <li>
                  <a href="{{ childlink.url }}">
                    {{ childlink.title }}
                  </a>
                </li>
              {% endfor %}
            </ul>
          </li>
        {% else %}
          <li>
            <a href="{{ link.url }}">
              {{ link.title }}
            </a>
          </li>
        {% endif %}
      {% endfor %}
    </ul>
  </nav>

  <div class="mobile-menu-toggle">
    <button class="menu-button" onclick="toggleMobileMenu()">Menu</button>
  </div>

  <nav class="mobile-menu" id="mobileMenu">
    <ul>
      {% for link in linklists[section.settings.menu].links %}
        <li>
          <a href="{{ link.url }}">
            {{ link.title }}
          </a>
          {% if link.links != blank %}
            <ul>
              {% for childlink in link.links %}
                <li>
                  <a href="{{ childlink.url }}">
                    {{ childlink.title }}
                  </a>
                </li>
              {% endfor %}
            </ul>
          {% endif %}
        </li>
      {% endfor %}
    </ul>
  </nav>
</section>

<style>
  .announcement-bar {
    background-color: #f8d7da;
    color: #721c24;
    padding: 10px;
    text-align: center;
  }

  .header-inner {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15px 30px;
  }

  .logo-image img {
    max-width: 100%;
    height: auto;
  }

  .cart-account {
    display: flex;
    align-items: center;
  }

  .cart-link {
    margin-right: 20px;
    text-decoration: none;
    color: #333;
  }

  .account-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
  }

  .account-links li {
    margin-left: 15px;
  }

  .account-links a {
    text-decoration: none;
    color: #333;
  }

  .search-form {
    display: flex;
    align-items: center;
  }

  .search-form input[type="search"] {
    padding: 5px;
    margin-right: 5px;
  }

  .desktop-nav {
    background-color: #fff;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  }

  .desktop-nav ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    justify-content: center;
  }

  .desktop-nav li {
    position: relative;
    margin: 0 15px;
  }

  .desktop-nav a {
    text-decoration: none;
    color: #333;
    padding: 10px;
    transition: background-color 0.3s;
  }

  .desktop-nav a:hover {
    background-color: #f0f0f0;
  }

  .mobile-menu-toggle {
    display: none; /* Hide mobile menu toggle on desktop */
  }

  .mobile-menu {
    display: none; /* Initially hide mobile menu */
    background-color: #fff;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
  }

  .mobile-menu ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .mobile-menu li {
    padding: 10px;
  }

  .mobile-menu a {
    text-decoration: none;
    color: #333;
  }

  @media (max-width: 768px) {
    .desktop-nav {
      display: none; /* Hide desktop nav on mobile */
    }

    .mobile-menu-toggle {
      display: block; /* Show mobile menu toggle on mobile */
    }

    .mobile-menu.show {
      display: block; /* Show mobile menu when toggled */
    }
  }
</style>

<script>
  function toggleMobileMenu() {
    const mobileMenu = document.getElementById('mobileMenu');
    mobileMenu.classList.toggle('show');
  }

  document.addEventListener("click", function(event) {
    const mobileMenu = document.getElementById('mobileMenu');
    const toggleButton = document.querySelector('.mobile-menu-toggle button');

    if (!mobileMenu.contains(event.target) && !toggleButton.contains(event.target)) {
      mobileMenu.classList.remove('show');
    }
  });
</script>