<section data-section-id="{{ section.id }}" data-section-type="header" x-data="{ openMobileMenu: false }">
  {%- if section.settings.announcement_bar_enabled -%}
    <div class="announcement-bar">
      {%- if section.settings.announcement_bar_home_page_only == false or template.name == 'index' -%}
        {%- if section.settings.announcement_bar_link != blank -%}
          <a href="{{ section.settings.announcement_bar_link }}">
            {{ section.settings.announcement_bar_text | escape }}
          </a>
        {%- else -%}
          <p>{{ section.settings.announcement_bar_text | escape }}</p>
        {%- endif -%}
      {%- endif -%}
    </div>
  {%- endif -%}

  <header role="banner">
    <div class="header-inner">
      {% if template.name == 'index' %}
        <h1>
      {% else %}
        <div class="h1">
      {% endif %}
      <a href="/" class="logo-image">
        {% if section.settings.logo != blank %}
          {% capture image_size %}{{ section.settings.logo_max_width }}x{% endcapture %}
          <img
            src="{{ section.settings.logo | img_url: image_size }}"
            srcset="{{ section.settings.logo | img_url: image_size }} 1x, {{ section.settings.logo | img_url: image_size, scale: 2 }} 2x"
            alt="{{ section.settings.logo.alt | default: shop.name }}"
          >
        {% else %}
          {{ shop.name }}
        {% endif %}
      </a>
      {% if template.name == 'index' %}
        </h1>
      {% else %}
        </div>
      {% endif %}

      <nav role="navigation" class="desktop-nav">
        <ul>
          {% for link in linklists[section.settings.menu].links %}
            <li x-data="{ open: false }">
              <a href="{{ link.url }}" @click.prevent="open = !open">
                {{ link.title }}
                <span x-show="link.links.length > 0">▼</span>
              </a>
              <ul x-show="open" @click.away="open = false" x-transition>
                {% for childlink in link.links %}
                  <li>
                    <a href="{{ childlink.url }}">
                      {{ childlink.title }}
                    </a>
                  </li>
                {% endfor %}
              </ul>
            </li>
          {% endfor %}
        </ul>
      </nav>

      {% if shop.customer_accounts_enabled %}
        <ul class="account-links">
          {% if customer %}
            <li>
              <a href="/account">{{ customer.first_name | default: 'Account' }}</a>
            </li>
            <li>
              <a href="/account/logout">Log out</a>
            </li>
          {% else %}
            <li>
              <a href="/account/login">Log in</a>
            </li>
            <li>
              <a href="/account/register">Create account</a>
            </li>
          {% endif %}
        </ul>
      {% endif %}
    </div>
  </header>

  <div class="mobile-menu-toggle">
    <button @click="openMobileMenu = !openMobileMenu" class="menu-button">Menu</button>
  </div>

  <nav class="mobile-menu" x-show="openMobileMenu" @click.away="openMobileMenu = false" x-transition>
    <ul>
      {% for link in linklists[section.settings.menu].links %}
        <li x-data="{ open: false }">
          <a href="{{ link.url }}" @click.prevent="open = !open">
            {{ link.title }}
            <span x-show="link.links.length > 0">▼</span>
          </a>
          <ul x-show="open" @click.away="open = false" x-transition>
            {% for childlink in link.links %}
              <li>
                <a href="{{ childlink.url }}">
                  {{ childlink.title }}
                </a>
              </li>
            {% endfor %}
          </ul>
        </li>
      {% endfor %}
    </ul>
  </nav>
</section>

<style>
  body {
    font-family: 'Arial', sans-serif; /* Use a clean sans-serif font */
    margin: 0;
    padding: 0;
  }

  .announcement-bar {
    background-color: #f8d7da;
    color: #721c24;
    padding: 10px;
    text-align: center;
    font-weight: bold;
    border-bottom: 2px solid #f5c6cb; /* Added a border for separation */
  }

  .header-inner {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15px 30px;
    background-color: #ffffff; /* White background for the header */
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* Subtle shadow for depth */
  }

  .logo-image img {
    max-width: 100%;
    height: auto;
  }

  .account-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
  }

  .account-links li {
    margin-left: 15px;
  }

  .account-links a {
    text-decoration: none;
    color: #333;
    transition: color 0.3s;
  }

  .account-links a:hover {
    color: #007bff; /* Change color on hover */
  }

  .desktop-nav ul {
    display: flex;
    justify-content: space-evenly;
    align-items: center;
  }

  .mobile-menu ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .desktop-nav li,
  .mobile-menu li {
    position: relative;
  }

  .desktop-nav a,
  .mobile-menu a {
    text-decoration: none;
    padding: 10px 15px;
    display: block;
    color: #333;
    transition: background-color 0.3s;
  }

  .desktop-nav a:hover,
  .mobile-menu a:hover {
    background-color: #f0f0f0; /* Light gray on hover */
  }

  .mobile-menu {
    background-color: #ffffff; /* White background for mobile menu */
    border: 1px solid #ccc; /* Border for mobile menu */
    border-radius: 4px; /* Rounded corners for mobile menu */
  }

  .mobile-menu-toggle {
    display: none; /* Hide mobile menu toggle on desktop */
  }

  @media (max-width: 768px) {
    .desktop-nav {
      display: none; /* Hide desktop nav on mobile */
    }
    .mobile-menu {
      display: block; /* Show mobile menu */
    }
    .mobile-menu-toggle {
      display: block; /* Show mobile menu toggle on mobile */
      background-color: #007bff; /* Button background color */
      color: white; /* Button text color */
      border: none;
      border-radius: 4px; /* Rounded corners */
      padding: 10px;
      cursor: pointer;
      margin: 10px 0;
    }
  }
</style>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "header",
      "content": "Announcement bar"
    },
    {
      "type": "checkbox",
      "id": "announcement_bar_enabled",
      "label": "Show announcement",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "announcement_bar_home_page_only",
      "label": "Show on home page only",
      "default": true
    },
    {
      "type": "text",
      "id": "announcement_bar_text",
      "label": "Announcement text",
      "default": "Announce something here"
    },
    {
      "type": "url",
      "id": "announcement_bar_link",
      "label": "Announcement link",
      "info": "Optional"
    },
    {
      "type": "header",
      "content": "Header"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo image"
    },
    {
      "type": "range",
      "id": "logo_max_width",
      "min": 50,
      "max": 450,
      "step": 10,
      "unit": "px",
      "label": "Custom logo width",
      "default": 250
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu",
      "default": "main-menu"
    }
  ]
}
{% endschema %}

<script type="application/ld+json">
  {
    "@context": "http://schema.org",
    "@type": "Organization",
    "name": "{{ shop.name }}",
   {% if section.settings.logo %}
      {% assign image_size = section.settings.logo.width | append:'x' %}
      "logo": "https:{{ section.settings.logo | img_url: image_size }}",
    {% endif %}
    "sameAs": [
      "{{ settings.social_twitter_link }}",
      "{{ settings.social_facebook_link }}",
      "{{ settings.social_pinterest_link }}",
      "{{ settings.social_instagram_link }}",
      "{{ settings.social_tumblr_link }}",
      "{{ settings.social_snapchat_link }}",
      "{{ settings.social_youtube_link }}",
      "{{ settings.social_vimeo_link }}"
    ],
    "url": "{{ shop.url }}{{ page.url }}"
  }
</script>

{% if template.name == 'index' %}
  <script type="application/ld+json">
    {
      "@context": "http://schema.org",
      "@type": "WebSite",
      "name": "{{ shop.name }}",
      "potentialAction": {
        "@type": "SearchAction",
        "target": "{{ shop.url }}/search?q={search_term_string}",
        "query-input": "required name=search_term_string"
      },
      "url": "{{ shop.url }}{{ page.url }}"
    }
  </script>
{% endif %}
