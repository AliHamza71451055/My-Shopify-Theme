<header class="site-header" x-data="{ open: false }">
    <div class="header-container">
        <!-- Left Section: Shop Name -->
        <div class="shop-name">
            <a href="{{ shop.url }}">{{ shop.name }}</a>
        </div>

        <!-- Middle Section: Navigation Menu -->
        <nav class="desktop-menu">
            <ul>
                {% for link in linklists.main-menu.links %}
                    <li x-data="{ openDropdown: false }" class="menu-item">
                        <a href="{{ link.url }}" @click.prevent="openDropdown = !openDropdown">{{ link.title }}</a>
                        {% if link.links %}
                            <ul class="dropdown" x-show="openDropdown" @click.away="openDropdown = false" x-transition>
                                {% for sublink in link.links %}
                                    <li><a href="{{ sublink.url }}">{{ sublink.title }}</a></li>
                                {% endfor %}
                            </ul>
                        {% endif %}
                    </li>
                {% endfor %}
            </ul>
        </nav>

        <!-- Right Section: User Links and Cart -->
        <div class="user-links">
            <a href="/account">Account</a>
            <a href="/cart">Cart</a>
        </div>

        <!-- Mobile Menu Toggle -->
        <div class="mobile-menu-toggle">
            <button @click="open = !open" class="menu-button">Menu</button>
        </div>

        <!-- Mobile Menu -->
        <nav class="mobile-menu" x-show="open" @click.away="open = false" x-transition>
            <div class="shop-name-mobile">
                <a href="{{ shop.url }}">{{ shop.name }}</a>
            </div>
            <ul>
                {% for link in linklists.main-menu.links %}
                    <li x-data="{ openDropdown: false }" class="menu-item">
                        <a href="{{ link.url }}" @click.prevent="openDropdown = !openDropdown">{{ link.title }}</a>
                        {% if link.links %}
                            <ul class="dropdown" x-show="openDropdown" @click.away="openDropdown = false" x-transition>
                                {% for sublink in link.links %}
                                    <li><a href="{{ sublink.url }}">{{ sublink.title }}</a></li>
                                {% endfor %}
                            </ul>
                        {% endif %}
                    </li>
                {% endfor %}
            </ul>
            <div class="user-links-mobile">
                <a href="/account">Account</a>
                <a href="/cart">Cart</a>
            </div>
        </nav>
    </div>
</header>

