<article class="article-container">
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'article-title' %}
        <a href="{{ blog.url }}" class="blog-title">{{ blog.title }}</a>
        <h1 class="article-title">{{ article.title }}</h1>
      {% when 'article-author' %}
        {% if section.settings['enable-author'] %}
          <small class="article-author">{{ article.author }}</small>
        {% endif %}
      {% when 'article-published-date' %}
        {% if section.settings['enable-published-date'] %}
          <time class="article-published-date" datetime="{{ article.published_at | date: '%Y-%m-%d' }}">
            {{ article.published_at | date: '%d-%m-%Y' }}
          </time>
        {% endif %}
      {% when 'thumbnail' %}
        {% if article.image %}
          <img
            class="article-thumbnail"
            src="{{ article.image | image_url: 'large' }}"
            alt="{{ article.image.alt | escape }}"
            height="100"
            width="100"
          >
        {% endif %}
      {% when 'article-content' %}
        <div class="article-content">{{ article.content }}</div>
      {% when 'article-summary' %}
        <div class="article-summary">{{ block.settings.summary_text }}</div>
      {% when 'call-to-action' %}
        <div class="call-to-action">
          <a href="{{ block.settings.cta_link }}" class="cta-button">{{ block.settings.cta_text }}</a>
        </div>
      {% else %}
        <!-- Optional: Handle unexpected block types -->
    {% endcase %}
  {% endfor %}
</article>

<div class="comments-section">
  {% if article.comments_count > 0 %}
  {% else %}
    There are no comments in this article.
  {% endif %}
</div>

<style>
  .article-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20px;
    margin: 20px auto;
    max-width: 800px; /* Limit the width for better readability */
    border: 1px solid #eaeaea;
    border-radius: 12px; /* Rounded corners */
    background-color: #ffffff; /* White background for contrast */
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1); /* Enhanced shadow for depth */
    transition: transform 0.3s, box-shadow 0.3s; /* Smooth transition for hover effects */
  }

  .article-container:hover {
    transform: translateY(-5px); /* Lift effect on hover */
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.2); /* Deeper shadow on hover */
  }

  .blog-title {
    font-size: 20px;
    color: #007bff; /* Link color */
    text-decoration: none; /* Remove underline */
    margin-bottom: 10px;
  }

  .blog-title:hover {
    text-decoration: underline; /* Underline on hover */
  }

  .article-title {
    font-size: 60px; /* Larger title */
    margin: 10px 0;
    color: #333;
    text-align: center; /* Centered title */
    transition: color 0.3s; /* Smooth color transition */
  }

  .article-title:hover {
    color: #e63946; /* Change color on hover */
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2); /* Subtle text shadow */
  }

  .article-author {
    font-size: 22px;
    color: #555;
    margin-bottom: 10px;
    display: block;
    text-align: center; /* Centered author name */
  }

  .article-published-date {
    font-size: 18px;
    color: #777;
    margin-bottom: 10px;
    text-align: center; /* Centered published date */
  }

  .article-thumbnail {
    border-radius: 12px; /* Rounded corners for the image */
    margin-bottom: 10px;
    display: block;
    max-width: 100%; /* Responsive */
    height: auto; /* Maintain aspect ratio */
    transition: transform 0.3s; /* Smooth transition for hover effects */
  }

  .article-thumbnail:hover {
    transform: scale(1.05); /* Slight zoom effect on hover */
  }

  .article-content {
    font-size: 1.2em;
    line-height: 1.8; /* Increased line height for readability */
    color: #444;
    margin-top: 10px;
    text-align: left; /* Left-aligned content for readability */
  }

  .article-summary {
    font-size: 25px;
    color: #666;
    margin: 1em 0;
    padding: 10px;
    background-color: #f0f0f0; /* Light background for summary */
    border-left: 4px solid #007bff; /* Highlight left border */
  }

  .article-tags {
    margin: 10px 0;
    text-align: center; /* Centered tags */
  }

  .tag {
    display: inline-block;
    background-color: #e0e0e0; /* Tag background */
    color: #333;
    padding: 5px 10px;
    border-radius: 20px; /* Rounded tags */
    margin: 0 5px; /* Spacing between tags */
    font-size: 0.9em;
  }

  .call-to-action {
    margin: 20px 0;
    text-align: center; /* Centered CTA */
  }

  .cta-button {
    background-color: #007bff; /* CTA button color */
    color: white; /* Text color */
    padding: 10px 20px;
    border: none;
    border-radius: 5px; /* Rounded corners */
    text-decoration: none; /* Remove underline */
    font-size: 25px;
    transition: background-color 0.3s; /* Smooth transition for hover */
  }

  .cta-button:hover {
    background-color: #0056b3; /* Darker shade on hover */
  }
</style>

{% schema %}
{
  "name": "article",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable-author",
      "label": "Display Author Name",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable-published-date",
      "label": "Display Published Date",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "article-title",
      "name": "Title",
      "limit": 1
    },
    {
      "type": "article-author",
      "name": "Author",
      "limit": 1
    },
    {
      "type": "article-published-date",
      "name": "Published Date",
      "limit": 1
    },
    {
      "type": "thumbnail",
      "name": "Featured Image",
      "limit": 1
    },
    {
      "type": "article-content",
      "name": "Content",
      "limit": 1
    },
    {
      "type": "article-summary",
      "name": "Summary",
      "limit": 1,
      "settings": [
        {
          "type": "textarea",
          "id": "summary_text",
          "label": "Summary Text",
          "default": "This is the summary of this article"
        }
      ]
    },
    {
      "type": "call-to-action",
      "name": "Call to Action",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "cta_text",
          "label": "CTA Button Text"
        },
        {
          "type": "url",
          "id": "cta_link",
          "label": "CTA Button Link"
        }
      ]
    }
  ]
}
{% endschema %}
