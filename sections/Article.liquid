<article>
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'article-title' %}
        <h1 class="article-title">{{ article.title }}</h1>
      {% when 'article-author' %}
        {% if section.settings['enable-author'] %}
          <small class="article-author">{{ article.author }}</small>
        {% endif %}
      {% when 'article-published-date' %}
        {% if section.settings['enable-published-date'] %}
          <time class="article-published-date" datetime="{{ article.published_at | date: '%Y-%m-%d' }}">
            {{ article.published_at | date: '%d-%m-%Y' }}
          </time>
        {% endif %}
      {% when 'thumbnail' %}
        {% if article.image %}
          <img
            class="article-thumbnail"
            src="{{ article.image | image_url: 'large' }}"
            alt="{{ article.image.alt | escape }}"
            height="100"
            width="100"
          >
        {% endif %}
      {% when 'article-content' %}
        <div class="article-content">{{ article.content }}</div>
      {% else %}
        <!-- Optional: Handle unexpected block types -->
    {% endcase %}
  {% endfor %}
</article>

<style>
  article {
    display: flex;
    flex-direction: column;
    justify content: space-evenly;
    align-items: center;
  }

  .article-title {
    font-size: 25px;
    margin: 5px;
    color: #333;
  }

  .article-title:hover {
    font-weight: bold;
    color: red;
  }

  .article-author {
    font-size: 1em;
    color: #555;
    margin-bottom: 0.5em;
    display: block;
  }

  .article-published-date {
    font-size: 0.9em;
    color: #777;
    margin-bottom: 1em;
  }

  .article-thumbnail {
    border-radius: 8px;
    margin-bottom: 1em;
    display: block;
    max-width: 100%; /* Responsive */
    height: auto; /* Maintain aspect ratio */
  }

  .article-content {
    font-size: 1.1em;
    line-height: 1.6;
    color: #444;
    margin-top: 1em;
  }

  /* Additional styling for better layout */
  .article-content p {
    margin-bottom: 1em;
  }
</style>

{% schema %}
{
  "name": "article",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable-author",
      "label": "Display Author Name",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable-published-date",
      "label": "Display Published Date",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "article-title",
      "name": "Title",
      "limit": 1
    },
    {
      "type": "article-author",
      "name": "Author",
      "limit": 1
    },
    {
      "type": "article-published-date",
      "name": "Published Date",
      "limit": 1
    },
    {
      "type": "thumbnail",
      "name": "Featured Image",
      "limit": 1
    },
    {
      "type": "article-content",
      "name": "Content",
      "limit": 1
    }
  ]
}
{% endschema %}
