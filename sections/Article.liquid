<article class="article-container">
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'article-title' %}
        <a href="{{ blog.url }}" class="blog-title">{{ blog.title }}</a>
        <h1 class="article-title">{{ article.title }}</h1>
      {% when 'article-author' %}
        {% if section.settings['enable-author'] %}
          <small class="article-author">{{ article.author }}</small>
        {% endif %}
      {% when 'article-published-date' %}
        {% if section.settings['enable-published-date'] %}
          <time class="article-published-date" datetime="{{ article.published_at | date: '%Y-%m-%d' }}">
            {{ article.published_at | date: '%d-%m-%Y' }}
          </time>
        {% endif %}
      {% when 'thumbnail' %}
        {% if article.image %}
          <img
            class="article-thumbnail"
            src="{{ article.image | image_url: 'large' }}"
            alt="{{ article.image.alt | escape }}"
            height="100"
            width="100"
          >
        {% endif %}
      {% when 'article-content' %}
        <div class="article-content">{{ article.content }}</div>
      {% when 'article-summary' %}
        <div class="article-summary">{{ block.settings.summary_text }}</div>
      {% when 'call-to-action' %}
        <div class="call-to-action">
          <a href="{{ block.settings.cta_link }}" class="cta-button">{{ block.settings.cta_text }}</a>
        </div>
      {% else %}
        <!-- Optional: Handle unexpected block types -->
    {% endcase %}
  {% endfor %}
</article>

<div class="comments-section">
  <h2 class="comments-title">Comments</h2>
  {% if article.comments_count > 0 %}
    <ul class="comments-list">
      {% for comment in article.comments %}
        <li class="comment-item">
          <div class="comment-author">{{ comment.author }}</div>
          <div class="comment-body">{{ comment.body }}</div>
          <div class="comment-date">{{ comment.created_at | date: '%d-%m-%Y' }}</div>
        </li>
      {% endfor %}
    </ul>
  {% else %}
    <p class="no-comments">There are no comments on this article.</p>
  {% endif %}
</div>

<div class="comments-form" id="comments_form">
  <h3 class="form-title">Add a Comment</h3>
  {% form 'new_comment', article %}
    <label for="comment-author">Name</label>
    <input type="text" name="comment[author]" id="comment-author" placeholder="Your Name" required>
    <label for="comment-email">Email</label>
    <input type="email" name="comment[email]" id="comment-email" placeholder="Your Email" required>
    <label for="comment-body">Comment</label>
    <textarea name="comment[body]" id="comment-body" placeholder="Your Comment" required></textarea>
    <input type="submit" value="Post Comment" class="submit-button">
  {% endform %}
</div>

<style>
  /* Article Styles */
  .article-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20px;
    margin: 20px auto;
    max-width: 800px;
    border: 1px solid #eaeaea;
    border-radius: 12px;
    background-color: #ffffff;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s, box-shadow 0.3s;
  }

  .article-container:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.2);
  }

  .blog-title {
    font-size: 20px;
    color: #007bff;
    text-decoration: none;
    margin-bottom: 10px;
  }

  .article-title {
    font-size: 60px;
    margin: 10px 0;
    color: #333;
    text-align: center;
    transition: color 0.3s;
  }

  .article-author, .article-published-date {
    font-size: 18px;
    color: #555;
    margin-bottom:  10px;
    text-align: center;
  }

  .article-thumbnail {
    border-radius: 12px;
    margin-bottom: 10px;
    display: block;
    max-width: 100%;
    height: auto;
    transition: transform 0.3s;
  }

  .article-thumbnail:hover {
    transform: scale(1.05);
  }

  .article-content {
    font-size: 1.2em;
    line-height: 1.8;
    color: #444;
    margin-top: 10px;
    text-align: left;
  }

  .article-summary {
    font-size: 25px;
    color: #666;
    margin: 1em 0;
    padding: 10px;
    background-color: #f0f0f0;
    border-left: 4px solid #007bff;
  }

  .call-to-action {
    margin: 20px 0;
    text-align: center;
  }

  .cta-button {
    background-color: #007bff;
    color: white;
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    text-decoration: none;
    font-size: 25px;
    transition: background-color 0.3s;
  }

  .cta-button:hover {
    background-color: #0056b3;
  }

  /* Comments Section Styles */
  .comments-section {
    margin-top: 40px;
    padding: 20px;
    border-top: 1px solid #eaeaea;
    background-color: #f9f9f9;
  }

  .comments-title {
    font-size: 28px;
    margin-bottom: 20px;
    color: #333;
  }

  .comments-list {
    list-style-type: none;
    padding: 0;
  }

  .comment-item {
    margin-bottom: 15px;
    padding: 10px;
    border: 1px solid #eaeaea;
    border-radius: 8px;
    background-color: #ffffff;
  }

  .comment-author {
    font-weight: bold;
    color: #007bff;
  }

  .comment-body {
    margin: 5px 0;
    color: #444;
  }

  .comment-date {
    font-size: 12px;
    color: #777;
  }

  .no-comments {
    color: #999;
    font-style: italic;
  }

  /* Comment Form Styles */
  .comments-form {
    margin-top: 20px;
    padding: 20px;
    border: 1px solid #eaeaea;
    border-radius: 8px;
    background-color: #ffffff;
  }

  .form-title {
    font-size: 24px;
    margin-bottom: 15px;
    color: #333;
  }

  .comments-form label {
    display: block;
    margin-bottom: 5px;
    font-weight: bold;
  }

  .comments-form input[type="text"],
  .comments-form input[type="email"],
  .comments-form textarea {
    width: 100%;
    padding: 10px;
    margin-bottom: 15px;
    border: 1px solid #ccc;
    border-radius: 4px;
  }

  .comments-form .submit-button {
    background-color: #007bff;
    color: white;
    padding: 10px 15px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-size: 16px;
  }

  .comments-form .submit-button:hover {
    background-color: #0056b3;
  }
</style>

{% schema %}
{
  "name": "article",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable-author",
      "label": "Display Author Name",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable-published-date",
      "label": "Display Published Date",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "article-title",
      "name": "Title",
      "limit": 1
    },
    {
      "type": "article-author",
      "name": "Author",
      "limit": 1
    },
    {
      "type": "article-published-date",
      "name": "Published Date",
      "limit": 1
    },
    {
      "type": "thumbnail",
      "name": "Featured Image",
      "limit": 1
    },
    {
      "type": "article-content",
 "name": "Content",
      "limit": 1
    },
    {
      "type": "article-summary",
      "name": "Summary",
      "limit": 1,
      "settings": [
        {
          "type": "textarea",
          "id": "summary_text",
          "label": "Summary Text",
          "default": "This is the summary of this article"
        }
      ]
    },
    {
      "type": "call-to-action",
      "name": "Call to Action",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "cta_text",
          "label": "CTA Button Text"
        },
        {
          "type": "url",
          "id": "cta_link",
          "label": "CTA Button Link"
        }
      ]
    }
  ]
}
{% endschema %}
